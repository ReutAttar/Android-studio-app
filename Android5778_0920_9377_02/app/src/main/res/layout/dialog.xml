<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/kilometersEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please insert here the kilometers "
        android:textSize="20dp"
        android:inputType="number" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you fiil fuel?"
        android:textSize="25dp"/>

    <CheckBox
        android:id="@+id/fuelCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <EditText
        android:id="@+id/fuelEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please insert how much fuel you fill"
        android:inputType="number" />
</LinearLayout>